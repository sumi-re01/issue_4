<!--users#index 一覧-->
<div class="container px-5 px-sm-0">
  <div class="row">
  <!--User info, New book-->
    <div class="col-md-3">
      <%= render partial: 'books/user', locals: {user: @user, book: @book_new} %>
    </div>

  <!--Users一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.followers.count %></td>
            <td>フォロワー数：<%= user.following.count %></td>

            <td>
            <% unless current_user == user %>
              <div id="follow">

                <% if current_user.following?(user) %>
                <!--フォローしている場合-->
                  <%= link_to relationship_path(current_user), method: :delete do %>
                    フォローを外す
                  <% end %>

                <% else %>
                <!--フォローしていない場合-->
                  <%= link_to relationships_path(user), method: :create do %>
                    フォローする
                  <% end %>
                <% end %>

              </div>
            <% end %>
            </td>

            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>